{

  "description": "Firefox Nightly 57 will remove the share feature because it was using a non official Social API.",
  "manifest_version": 2,
  "name": "Share Backported",
  "version": "1.0.9",
  "icons":
          {
            "16": "icon.svg",
            "24": "icon.svg",
            "48": "icon.svg",
            "96": "icon.svg"
          },
  "browser_action": {
    "browser_style": true,
    "default_icon":
            {
              "16": "icon.svg",
              "24": "icon.svg",
              "48": "icon.svg",
              "96": "icon.svg"
            },
    "theme_icons": [
      {
        "dark": "icon.svg",
        "light": "icon-light.svg",
        "size": 16
      }
    ],
    "default_title": "Share",
    "default_popup": "modal/modal.html"
  },
  "page_action": {
    "default_icon": "icon.svg",
    "browser_style": true
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "https://www.linkedin.com/*",
    "https://plus.google.com/*",
    "https://reddit.com/*"
  ]
}
